--drawing
function draw_game()
	cls(0)
	--draw background
	map()
	--draw player
	spr(pl.spr,pl.x,pl.y,1,1,pl.flip)
	--draw projectiles
	for i=1,#projectiles do
		spr(projectiles[i].spr,projectiles[i].x,projectiles[i].y)
	end
	--draw melee
	if melee.x != nil then
		spr(melee.spr,melee.x,melee.y)
	end
	_debug()
end

function draw_title()
	cls(0)
	print("∧░⬅️🐱🅾️😐░")
end

function draw_gameover()
	cls(0)
end

function _draw()
	if gstate==1 then
		draw_game()
	elseif gstate==2 then
		draw_gameover()
	elseif gstate==0 then
		draw_title()
	end
end
